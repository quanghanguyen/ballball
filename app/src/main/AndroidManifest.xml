        <activity
            android:name=".main.match.wait.details.WaitDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".main.match.newcreate.details.NewCreateDetailsActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCAJDtAbxn74gSDZ82i5oDUDRUgZuQkQpU" />

        <activity
            android:name=".map.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".main.home.all.details.AllDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".creatematch.CreateMatchActivity"
            android:exported="false" />
        <activity
            android:name=".user.teaminformation.TeamInformationActivity"
            android:exported="false" />
        <activity
