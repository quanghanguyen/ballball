<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/items">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardCornerRadius="32dp"
        android:elevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#7A7A7A"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/team_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/team_image"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/new_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mới tạo"
                android:textColor="@color/white"
                android:background="@drawable/wait_confirm_background"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="12dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/wait_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/new_create"
                android:text="Chờ xác nhận"
                android:textColor="@color/white"
                android:background="@drawable/wait_confirm_background"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="12dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="Mortified Coercion"
                android:textColor="#363636"
                android:textSize="16sp"
                />

            <RelativeLayout
                android:id="@+id/date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_name"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                >

                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/date_icon" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/date_icon"
                    android:fontFamily="@font/inter_medium"
                    android:text="01/01/2022"
                    android:textColor="#7A7A7A"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clock_icon" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/time_icon"
                    android:fontFamily="@font/inter_medium"
                    android:text="12:12"
                    android:textColor="#7A7A7A"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_layout"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                >

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/location_icon"
                    android:fontFamily="@font/inter_medium"
                    android:text="Sân Đại Học Khoa Học"
                    android:textColor="#7A7A7A"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/people_number_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_layout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_alignStart="@+id/time_layout"
                >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_icon" />

                <TextView
                    android:id="@+id/people_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/user_icon"
                    android:fontFamily="@font/inter_medium"
                    android:text="10"
                    android:textColor="#7A7A7A"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_layout"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                >

                <ImageView
                    android:id="@+id/location_icon_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/location_icon_2"
                    />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/location_icon_2"
                    android:fontFamily="@font/inter_medium"
                    android:text="FJJ2+M47, Vỹ Dạ, Thành phố Huế, Thừa Thiên Huế, Việt Nam "
                    android:textColor="#7A7A7A"
                    android:textSize="12sp" />
            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>